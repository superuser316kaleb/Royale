<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo2.controladores.InicioSesionControlador">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Título de la aplicación -->
    <Label text="Bienvenido a Royale">
        <font>
            <Font size="20" />
        </font>
    </Label>

    <!-- Campo de texto para el nombre de usuario -->
    <TextField fx:id="usernameField" promptText="Nombre de usuario" />

    <!-- Campo de contraseña para la contraseña -->
    <PasswordField fx:id="passwordField" promptText="Contraseña" />

    <!-- Botón para iniciar sesión -->
    <Button maxWidth="Infinity" onAction="#onLoginButtonClick" text="Iniciar Sesión" />
    <Text fx:id="feedbackText" />
    <!-- Enlace para registrarse si el usuario no tiene cuenta -->
    <Hyperlink onAction="#onRegisterLinkClick" text="¿No tienes cuenta? Regístrate aquí" />
</VBox>

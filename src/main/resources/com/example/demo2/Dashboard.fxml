<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<AnchorPane fx:id="pane1" prefHeight="800.0" prefWidth="1535.0" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">

    <AnchorPane layoutX="-6.0" prefHeight="883.0" prefWidth="318.0" styleClass="vbox_background_left" stylesheets="css/styles.css">

        <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="67.0" prefWidth="75.0">
            <graphic>
                <FontIcon iconColor="white" iconLiteral="far-user-circle" iconSize="80" />
            </graphic>
        </Label>
        <Label fx:id="lblUser" layoutX="101.0" layoutY="30.0" onMouseClicked="#cargarDetallesUsuario" prefHeight="36.0" prefWidth="163.0" textFill="WHITE">
            <font>
                <Font name="Arial Rounded MT Bold" size="30.0" />
            </font>
        </Label>
        <Label layoutX="101.0" layoutY="70.0" text="USUARIO" textFill="WHITE">
            <font>
                <Font name="Arial" size="18.0" />
            </font>
        </Label>
        <VBox alignment="CENTER" layoutX="-1.0" layoutY="135.0" prefHeight="240.0" prefWidth="311.0" spacing="80.0">

            <Button fx:id="btnInfo" onAction="#cargarDetallesUsuario" prefHeight="60.0" prefWidth="359.0" styleClass="button_options" text="INFORMACIÓN">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="fas-cloud-upload-alt" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="btnCanales" onAction="#oncanalesClick" prefHeight="60.0" prefWidth="359.0" styleClass="button_options" text="CANALES">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="fas-cloud-upload-alt" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="btnfavorites" onAction="#onFavClick" prefHeight="60.0" prefWidth="354.0" styleClass="button_options" text="FAVORITOS">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="fas-chart-line" iconSize="30" />
                </graphic>
            </Button>

            <Button fx:id="btnSalesReport" onAction="#onSalesClick" prefHeight="60.0" prefWidth="320.0" styleClass="button_options" text="COMPRA-VENTA">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="far-file-pdf" iconSize="30" />
                </graphic>

            </Button>


            <Button fx:id="btnReports" onAction="#onReportClick" prefHeight="60.0" prefWidth="371.0" styleClass="button_options" text="REPORTES">
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
                <graphic>
                    <FontIcon iconColor="white" iconLiteral="fas-envelope-open-text" iconSize="30" />
                </graphic>
            </Button>


        </VBox>
    </AnchorPane>
    <VBox prefHeight="876.0" prefWidth="1280.0" spacing="10.0" styleClass="fondoGradiente" stylesheets="css/styles.css" AnchorPane.rightAnchor="0.0">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
        <!-- Título y Barra de Navegación -->
        <HBox alignment="TOP_CENTER" spacing="10" stylesheets="css/styles.css">
            <Label alignment="TOP_RIGHT" style="-fx-font-size: 50px; -fx-font-weight: bold;" styleClass="lblTitle" text="Royale" textOverrun="CLIP">
            <font>
               <Font name="Bold Italic Art" size="38.0" />
            </font>
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.2837517261505127" green="0.27379998564720154" blue="0.3700000047683716" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="1.0" green="1.0" blue="1.0" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill></Label>
            <Button style="-fx-background-color: #363535; -fx-background-radius: 50; -fx-background-radius: 50; -fx-text-fill: white " text="Inicio" />
            <Button style="-fx-background-color: #363535; -fx-background-radius: 50; -fx-background-radius: 50; -fx-text-fill: white " text="Categorías" />
            <Button style="-fx-background-color: #363535; -fx-background-radius: 50; -fx-background-radius: 50; -fx-text-fill: white " text="Mi Lista" />
            <Button style="-fx-background-color: #363535; -fx-background-radius: 50; -fx-background-radius: 50; -fx-text-fill: white " text="Perfil" />
            <!-- Barra de Búsqueda -->
            <TextField fx:id="busquedaTextField" promptText="Buscar..." style="-fx-background-radius: 50; -fx-background-radius: 50;" />
            <Button style="-fx-background-color: #363535; -fx-background-radius: 50; -fx-background-radius: 50; -fx-text-fill: white " text="Buscar" />
        </HBox>

        <!-- Carrusel de Destacados -->
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 20px;" text="Destacados">
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.5" green="0.5948275327682495" blue="1.0" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="0.5648888945579529" green="0.41333332657814026" blue="0.6526315808296204" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill>
            <font>
               <Font size="20.0" />
            </font></Label>
            <HBox fx:id="carruselDestacados" spacing="10">
                <!-- Imágenes o tarjetas de videos destacados -->
            </HBox>
        </VBox>

        <!-- Sección de Categorías -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 20px;" text="Categorías">
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.5" green="0.5948275327682495" blue="1.0" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="0.5648888945579529" green="0.41333332657814026" blue="0.6526315808296204" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill></Label>
            <HBox spacing="15">
                <!-- Botones de categoría -->
            </HBox>
        </VBox>

        <!-- Recomendaciones Personalizadas -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 20px;" text="Recomendado para ti">
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.5" green="0.5948275327682495" blue="1.0" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="0.5648888945579529" green="0.41333332657814026" blue="0.6526315808296204" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill></Label>
            <ListView fx:id="listaRecomendaciones" prefHeight="200" />
        </VBox>

        <!-- Sección de Noticias o Anuncios -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 20px;" text="Noticias y Anuncios">
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.5" green="0.5948275327682495" blue="1.0" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="0.5648888945579529" green="0.41333332657814026" blue="0.6526315808296204" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill></Label>
            <ListView fx:id="listaNoticias" prefHeight="100" />
        </VBox>

        <!-- Historial de Visualización Reciente -->
        <VBox spacing="10">
            <Label style="-fx-font-size: 20px;" text="Visualizaciones Recientes">
            <textFill>
               <LinearGradient endX="1.0" endY="1.0">
                  <stops>
                     <Stop>
                        <color>
                           <Color red="0.5" green="0.5948275327682495" blue="1.0" />
                        </color>
                     </Stop>
                     <Stop offset="1.0">
                        <color>
                           <Color red="0.5648888945579529" green="0.41333332657814026" blue="0.6526315808296204" />
                        </color>
                     </Stop>
                  </stops>
               </LinearGradient>
            </textFill></Label>
            <ListView fx:id="listaHistorial" prefHeight="100" />
        </VBox>
    </VBox>
</AnchorPane>

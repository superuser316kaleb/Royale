<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<VBox spacing="20" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo2.controladores.InicioSesionControlador">
    <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

    <!-- Logo o imagen de la aplicación -->
    <ImageView fx:id="logoImageView" fitWidth="200" fitHeight="200" preserveRatio="true"/>

    <!-- Mensaje de bienvenida -->
    <Label text="Bienvenido a StreamApp" style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <!-- Campos de usuario y contraseña -->
    <VBox spacing="10">
        <TextField fx:id="usuarioTextField" promptText="Usuario" maxWidth="300"/>
        <PasswordField fx:id="contrasenaPasswordField" promptText="Contraseña" maxWidth="300"/>
    </VBox>

    <!-- Botones para iniciar sesión y registrarse -->
    <HBox spacing="15">
        <Button text="Iniciar Sesión" onAction="#iniciarSesion" style="-fx-font-size: 16px;"/>
        <Button text="Registrarse" onAction="#irARegistro" style="-fx-font-size: 16px;"/>
    </HBox>

    <!-- Enlace para recuperar contraseña -->
    <Hyperlink text="¿Olvidaste tu contraseña?" onAction="#recuperarContrasena"/>
</VBox>

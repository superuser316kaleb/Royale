<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="459.0" prefWidth="484.0" spacing="15" styleClass="fondoGradiente" stylesheets="@css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.demo2.controladores.DetallesUsuarioControlador">
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

    <!-- Título de la sección -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Detalles del Usuario" />

    <!-- Campos para los detalles del usuario -->
    <TextField fx:id="nombreTextField" promptText="Nombre" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
    <TextField fx:id="apellidoTextField" promptText="Apellido" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
    <TextField fx:id="emailTextField" promptText="Email" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
    <TextField fx:id="usuarioTextField" promptText="Nombre de Usuario" style="-fx-background-radius: 50; -fx-border-radius: 50;" />

    <!-- Botones para acciones -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#guardarCambios" style="-fx-background-color: #363535; -fx-background-radius: 50; -fx-background-radius: 50; -fx-text-fill: white " text="Guardar Cambios" />
        <Button onAction="#cambiarContraseña" style="-fx-background-color: #363535; -fx-background-radius: 50; -fx-background-radius: 50; -fx-text-fill: white " text="Cambiar Contraseña" />
    </HBox>
</VBox>

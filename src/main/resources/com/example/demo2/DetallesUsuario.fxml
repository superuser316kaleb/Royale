<VBox alignment="TOP_CENTER" prefHeight="459.0" prefWidth="484.0" spacing="15" styleClass="fondoGradiente"
      stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      >
    <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>


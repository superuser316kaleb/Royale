    <!-- Campos para los detalles del usuario -->
    <TextField fx:id="nombreTextField" promptText="Nombre" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
    <TextField fx:id="apellidoTextField" promptText="Apellido" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
    <TextField fx:id="emailTextField" promptText="Email" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
    <TextField fx:id="domicilioTextField" promptText="Domicilio" style="-fx-background-radius: 50; -fx-border-radius: 50;" />
   <TextField fx:id="contrasenaTextField1" layoutX="30.0" layoutY="331.0" promptText="Contraseña" style="-fx-background-radius: 50; -fx-border-radius: 50;" />

